{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./build",
    "esModuleInterop": true,  
    "experimentalDecorators": true,                          
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
    }                           
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
